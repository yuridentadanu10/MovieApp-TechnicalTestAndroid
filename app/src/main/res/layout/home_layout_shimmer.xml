<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_16dp">

    <View
        android:id="@+id/tvSummaryShimmer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@color/shimmerColor" />

    <View
        android:id="@+id/tv_overviewShimmer2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tvSummaryShimmer"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/shimmerColor" />

    <View
        android:id="@+id/tv_overviewShimmer3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tv_overviewShimmer2"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/shimmerColor" />

    <View
        android:id="@+id/tv_overviewShimmer4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tv_overviewShimmer3"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/shimmerColor" />


</RelativeLayout>