<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/darkBlue</item>
        <item name="android:navigationBarColor">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--  Button Style  -->
    <style name="ButtonContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <!--  Text Style  -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="TextContent.SemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="TextContent.Title" parent="TextContent.SemiBold">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.SubTitle" parent="TextContent">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.Header" parent="TextContent.SemiBold">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>