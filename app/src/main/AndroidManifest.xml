<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pastitechnicaltest.pastimovieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.pastitechnicaltest.pastimovieapp.MovieApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp"
        android:usesCleartextTraffic="false"
        tools:targetApi="32">
        <activity
            android:name="com.pastitechnicaltest.pastimovieapp.presentation.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pastitechnicaltest.pastimovieapp.presentation.review.ReviewActivity"
            android:exported="false" />
        <activity
            android:name="com.pastitechnicaltest.pastimovieapp.presentation.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name="com.pastitechnicaltest.pastimovieapp.presentation.video.VideoPlayerActivity"
            android:exported="false" />
        <activity
            android:name="com.pastitechnicaltest.pastimovieapp.presentation.search.SearchActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>